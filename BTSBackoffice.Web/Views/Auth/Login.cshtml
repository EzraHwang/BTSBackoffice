@model BTSBackoffice.Web.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "管理員登入";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Arial', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            padding: 3rem;
            width: 100%;
            max-width: 400px;
        }
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-header i {
            font-size: 3rem;
            color: #667eea;
            margin-bottom: 1rem;
        }
        .login-header h2 {
            color: #333;
            font-weight: 600;
        }
        .form-control {
            border-radius: 10px;
            border: 2px solid #e1e5e9;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .alert {
            border-radius: 10px;
            border: none;
        }
        .form-floating {
            margin-bottom: 1rem;
        }
        .text-danger {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <i class="fas fa-ticket-alt"></i>
            <h2>Ticketrip 後台管理</h2>
            <p class="text-muted mb-0">管理員登入</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
                @if (Model.RemainingAttempts > 0 && !Model.IsLocked)
                {
                    <br><small>剩餘嘗試次數: @Model.RemainingAttempts</small>
                }
            </div>
        }

        <form asp-action="Login" asp-controller="Auth" method="post">
            @Html.AntiForgeryToken()

            <div class="form-floating">
                <input asp-for="Username" class="form-control" id="username" placeholder="使用者名稱"
                       disabled="@Model.IsLocked" autocomplete="username">
                <label for="username">使用者名稱</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Password" class="form-control" id="password" placeholder="密碼"
                       disabled="@Model.IsLocked" autocomplete="current-password">
                <label for="password">密碼</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-login" disabled="@Model.IsLocked">
                    @if (Model.IsLocked)
                    {
                        <text><i class="fas fa-lock me-2"></i>帳號已鎖定</text>
                    }
                    else
                    {
                        <text><i class="fas fa-sign-in-alt me-2"></i>登入</text>
                    }
                </button>
            </div>
        </form>

        @if (Model.IsLocked)
        {
            <div class="text-center mt-3">
                <small class="text-muted">
                    <i class="fas fa-clock me-1"></i>
                    請等待 15 分鐘後再試
                </small>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @if (!Model.IsLocked)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                document.getElementById('username').focus();
            });
        </script>
    }
</body>
</html>